# ===========================================
# The Dashboard - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# API Keys (Required)
# ===========================================

# Finnhub API Key (required for fundamentals data)
# Get your free key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# Google Gemini API Key (required for AI SWOT analysis)
# Get your free key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# FRED API Key (required for macroeconomic data)
# Get your free key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# ===========================================
# Server Configuration
# ===========================================

# Node.js server port (default: 3000)
NODE_PORT=3000

# Python backend port (default: 3001)
PYTHON_PORT=3001

# Environment: development or production
ENVIRONMENT=production
NODE_ENV=production

# ===========================================
# Rate Limiting (Python Backend)
# ===========================================

# Session duration in seconds (default: 300 = 5 minutes)
SESSION_DURATION=300

# Cooldown duration in seconds (default: 300 = 5 minutes)
COOLDOWN_DURATION=300

# Max requests per rate limit window (default: 100)
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds (default: 60)
RATE_LIMIT_WINDOW=60

# ===========================================
# Feature Flags
# ===========================================

# Enable yfinance as fallback for extra data (default: false)
# Set to true only if needed - it can cause delays
USE_YFINANCE_EXTRAS=false
